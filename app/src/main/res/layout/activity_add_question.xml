<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sim.treasity.AddQuestionActivity"
    android:background="#ECECEC"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:mockup_opacity="20"
        android:alpha="0.15"
        android:src="@drawable/back"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Electronique"
        android:textStyle="italic|bold"
        android:textSize="30sp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:id="@+id/tv_categorieQuestion"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titre de la question"
        android:id="@+id/EtTitre"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Description.."
        android:id="@+id/EtDescription"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="164dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AJOUTER"
        android:onClick="addAction"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:id="@+id/button" />

</RelativeLayout>
