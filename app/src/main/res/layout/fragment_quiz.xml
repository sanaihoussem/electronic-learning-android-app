<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sim.treasity.fragment.quizFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >

       <LinearLayout
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="3"
           android:paddingTop="30dp"
           >

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:clickable="false"
               android:id="@+id/btnQuestion"
               android:background="@color/bgColor1"
               />
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:clickable="false"
               android:id="@+id/btnNote"
               android:background="@color/bgColor2"
               />
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:id="@+id/btnDiff"
               android:clickable="false"
               android:background="@color/bgColor3"
               />

       </LinearLayout>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textAlignment="center"
           android:fontFamily="sans-serif"
           android:textSize="20dp"
           android:layout_marginTop="20dp"
           android:textStyle="bold"
           android:id="@+id/tvQuestion"
           />

       <LinearLayout
           android:padding="5dp"
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="2">

           <Button
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:layout_weight="1"
               android:paddingRight="5dp"
               android:id="@+id/btnReponse1"
               />
           <Button
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:layout_weight="1"
               android:paddingLeft="5dp"
               android:id="@+id/btnReponse2"
               />

       </LinearLayout>
       <LinearLayout
           android:padding="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="2"
           >

           <Button
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:layout_weight="1"
               android:id="@+id/btnReponse3"
               />
           <Button
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:layout_weight="1"
               android:id="@+id/btnReponse4"
               />

       </LinearLayout>



    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/next"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="10dp"
        android:id="@+id/btnNext"
        />

   </LinearLayout>

</FrameLayout>
