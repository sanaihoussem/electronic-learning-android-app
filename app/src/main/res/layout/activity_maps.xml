<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_maps"
    tools:context="com.sim.treasity.Maps.MapsActivity">


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/linearLayout1"
         >

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Afficher les magasins d'électronique à proximité"
             android:textAlignment="center"
             android:textStyle="bold"
             android:textSize="25sp"
             android:textAppearance="@anim/in_from_left"
             />


     </LinearLayout>




        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.example.priyanka.mapsdemo.MapsActivity"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/linearLayout1"
            android:layout_alignParentLeft="true" />





    </RelativeLayout>

